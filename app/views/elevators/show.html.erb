<%= render partial: "/contracts/sidebar-2" %>

<div class="flex mx-auto w-1/3">
  <div class="mx-auto">
    <% if notice.present? %>
      <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
    <% end %>

    <%= render @elevator %>

    <div class="mt-4">
      <%= link_to 'Edit this elevator', edit_contract_elevator_path(@contract, @elevator), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      <%= link_to 'Back ↩️', contract_path(@contract), class: "bg-gray-100 ml-2 rounded-lg py-3 px-5 inline-block font-medium" %>
      <div class="inline-block ml-2">
        <%= button_to 'Destroy this elevator', contract_elevator_path(@contract, @elevator), method: :delete, class: "text-white bg-red-500 mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
      </div>
    </div>
  </div>
</div>
