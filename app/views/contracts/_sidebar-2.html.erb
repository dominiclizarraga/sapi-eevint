<aside class="bg-sapiGray w-48 sticky top-24 h-[calc(100vh-96px)]">
  <div class="flex justify-center items-center h-12 hover:border-2 border-white w-36 ml-2">
    <%= link_to 'New contract' do %>
      <%= svg_tag "square-plus-regular", style: "color: #1a5294; font-size: 30px; margin: 0 15px; margin-left: 8px;" %>
    <% end %>
    <%= link_to "New project", new_contract_path, class: "text-xs hover:text-sm", style: "color: #1a5294;" %>
  </div>
  <div class="flex justify-center items-center h-12 hover:border-2 border-white w-36 ml-2">
    <%= link_to modal_contracts_path, data: { turbo_frame: "modal" } do %>
      <%= svg_tag "pen-to-square-solid", style: "color: #1a5294; font-size: 30px; margin-right: 18px;" %>
    <% end %>
    <%= link_to "Edit project", modal_contracts_path, class: "text-xs -ml-2 hover:text-sm", style: "color: #1a5294; margin-right: -5px;", data: { turbo_frame: "modal" } %>
  </div>
  <div class="flex justify-center items-center h-12 hover:border-2 border-white w-36 ml-4">
    <%= link_to modal_contracts_path, data: { turbo_frame: "modal" } do %>
      <%= svg_tag "arrows-turn-to-dots-solid", style: "color: #1a5294; font-size: 30px;" %>
    <% end %>
    <%= link_to "Move project", modal_contracts_path, class: "text-xs hover:text-sm", style: "color: #1a5294; margin-left: 10px;", data: { turbo_frame: "modal" } %>
  </div>
  <div class="flex justify-center items-center h-12 hover:border-2 border-white w-36 ml-2">
    <%= link_to history_contracts_path do %>
      <%= svg_tag "box-archive-solid", style: "color: #1a5294; font-size: 30px; margin: 0 15px; margin-left: -7px;" %>
    <% end %>
    <%= link_to "History", history_contracts_path, class: "text-xs hover:text-sm", style: "color: #1a5294;" %>
  </div>
  <div class="flex justify-center items-center h-12 hover:border-2 border-white w-36 ml-2">
    <%= link_to planning_path(format: :pdf) do %>
      <%= svg_tag "print-solid", style: "color: #1a5294; font-size: 30px; margin: 0 15px;" %>
    <% end %>
    <%= link_to "Print report", planning_path(format: :pdf), class: "text-xs hover:text-sm", style: "color: #1a5294;" %>
  </div>
</aside>
