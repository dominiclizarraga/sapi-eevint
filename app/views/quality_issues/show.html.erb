<%= render partial: "/contracts/sidebar-2" %>

<div class="mx-auto w-1/3 mt-5">

  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <%= render @quality_issue %>

  <div class="mt-4">
    <%= link_to 'Edit this QA', edit_quality_issue_path(@quality_issue), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Back ↩️', quality_issues_path, class: "bg-gray-100 ml-2 rounded-lg py-3 px-5 inline-block font-medium" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy', quality_issue_path(@quality_issue), method: :delete, class: "text-white bg-red-500 mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    </div>
  </div>
</div>
