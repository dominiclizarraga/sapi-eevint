<header class="flex items-center bg-sapiGray h-24 sticky top-0">
  <div class="flex items-center">
    <div class="ml-4">
      <%= link_to root_path do %>
        <%= image_tag "logo.png", style: "width: 160px;" %>
      <% end %>
    </div>
    <div class="flex ml-2 items-center">
      <div class="mr-4 text-xs hover:text-sm hover:border-2 border-white">
        <%= link_to root_path do %>
          <%= svg_tag "house", style: "color: #1a5294; font-size: 30px; margin: 0 16px;" %>
          <p class="text-center text-blue-700;" style="color:#1a5294;">HOME</p>
        <% end %>
      </div>
      <div class="mr-4 text-xs hover:text-sm hover:border-2 border-white">
        <%= link_to work_statuses_path do %>
          <%= svg_tag "chart-gantt-solid", style: "color: #1a5294; font-size: 30px; margin: 0 15px;" %>
          <p class="text-center text-blue-700;" style="color:#1a5294;">STATUS</p>
        <% end %>
      </div>
      <div class="mr-4 text-xs hover:text-sm hover:border-2 border-white">
        <%= link_to planning_path do %>
          <%= svg_tag "calendar", style: "color: #1a5294; font-size: 30px; margin: 0 25px;" %>
          <p class="text-center text-blue-700;" style="color:#1a5294;">PLANNING</p>
        <% end %>
      </div>
      <div class="mr-4 text-xs hover:text-sm hover:border-2 border-white">
        <%= link_to work_statuses_path do %>
          <%= svg_tag "chart-simple-solid", style: "color: #1a5294; font-size: 30px; margin: 0 15px;" %>
          <p class="text-center text-blue-700;" style="color:#1a5294;">CHARTS</p>
        <% end %>
      </div>
      <div class="mr-4 text-xs hover:text-sm hover:border-2 border-white">
        <%= link_to work_statuses_path do %>
          <%= svg_tag "check-to-slot-solid", style: "color: #1a5294; font-size: 25px; margin: 0 18px;" %>
          <p class="text-center text-blue-700;" style="color:#1a5294;">QUALITY</p>
        <% end %>
      </div>
      <div class="mr-4 text-xs hover:text-sm hover:border-2 border-white">
        <%= link_to work_statuses_path do %>
          <%= svg_tag "people-arrows-solid", style: "color: #1a5294; font-size: 25px; margin: 0 18px;" %>
          <p class="text-center text-blue-700;" style="color:#1a5294;">W. FORCE</p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="ml-auto m-12">
    <%= form_tag contracts_path, method: :get, class: "flex items-center" do %>
      <%= text_field_tag :search, params[:search], placeholder: "Customer, job number...", class: "rounded-l-lg border-t mr-0 border-b border-l text-gray-800 border-gray-200 bg-white" %>
      <%= submit_tag "Search", class: "h-10 px-6 rounded-r-lg border border-sapiBlue bg-sapiBlue text-white font-semibold hover:bg-blue-900" %>
    <% end %>
  </div>
</header>
